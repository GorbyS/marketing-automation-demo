{
  "name": "marketing-automation-demo",
  "private": true,
  "version": "1.0.0",
  "description": "Personalized Marketing API and Mocha integration tests demo",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tests/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "npm run test:integration",
    "test:integration": "npm run test:all -w tests/integration",
    "db:migrate": "node-pg-migrate up --envPath .env -m db/migrations",
    "db:rollback": "node-pg-migrate down --envPath .env -m db/migrations",
    "seed": "tsx -r dotenv/config scripts/seed/seed.ts"
  },
  "keywords": [],
  "author": "Sergey Gorbachev",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "dotenv": "^17.2.4",
    "dotenv-cli": "^11.0.0",
    "node-pg-migrate": "^8.0.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
