{
  "name": "integration",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "mocha --require ./testEnv.cjs --require tsx --extension ts \"src/**/*.spec.ts\" --timeout 30000",
    "test:junit": "mocha --require ./testEnv.cjs --require tsx --extension ts \"src/**/*.spec.ts\" --timeout 30000 --reporter mocha-junit-reporter --reporter-options mochaFile=reports/junit.xml",
    "test:html": "mocha --require ./testEnv.cjs --require tsx --extension ts \"src/**/*.spec.ts\" --timeout 30000 --reporter mochawesome --reporter-options reportDir=reports,overwrite=true,reportFilename=mochawesome,quiet=true",
    "test:all": "npm run test:junit && npm run test:html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@marketing/test-kit": "^1.0.0",
    "chai": "^6.2.2",
    "dotenv": "^17.3.1",
    "mocha": "^11.7.5"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.2.3",
    "mocha-junit-reporter": "^2.2.1",
    "mochawesome": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
